{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "sourceMap": false,
    "jsx": "react-jsx", // 在 .tsx 文件中不用手动导入 React
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "outDir": "dist",
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
